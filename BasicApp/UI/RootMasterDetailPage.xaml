<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="BasicApp.UI.RootMasterDetailPage">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout Padding="20">
                <StackLayout VerticalOptions="Start">
                    <Image Aspect="AspectFill" Source="logowhite.png"/>
                </StackLayout>
                <BoxView Margin="0,10,0,10" BackgroundColor="#79AB4E" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Nome:"></Label>
                        <Label Text="{Binding User.Name}"></Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Cpf:"></Label>
                        <Label Text="{Binding User.Cpf}"></Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="E-mail:"></Label>
                        <Label Text="{Binding User.Email}"></Label>
                    </StackLayout>
                </StackLayout>
                <StackLayout VerticalOptions="EndAndExpand">
                    <Button Text="Sair" Command="{Binding LogoutCommand}" HorizontalOptions="Fill" />
                    <Label HorizontalTextAlignment="Center" FontSize="Micro" Text="Versão 1.0"></Label>
                </StackLayout>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>